/*
 * This file creates definitions for the functions that manipulate union
 * values.
 */


/* Define some helper macros */


#define AVRO_TYPE_REF(tp, type, ref)  AVRO_TYPE_REF_##type(tp, ref)

#define AVRO_TYPE_REF_boolean(tp, ref)      avro_raw_boolean_t
#define AVRO_TYPE_REF_bytes(tp, ref)        avro_raw_bytes_t
#define AVRO_TYPE_REF_float(tp, ref)        avro_raw_float_t
#define AVRO_TYPE_REF_double(tp, ref)       avro_raw_double_t
#define avro_type_ref_int(tp, ref)          avro_raw_int_t
#define AVRO_TYPE_REF_long(tp, ref)         avro_raw_long_t
#define AVRO_TYPE_REF_null(tp, ref)         avro_raw_null_t
#define AVRO_TYPE_REF_string(tp, ref)       avro_raw_string_t

#define AVRO_TYPE_REF_array(tp, ref)        tp##_array_##ref##_t
#define AVRO_TYPE_REF_enum(tp, ref)         tp##_##ref##_t
#define AVRO_TYPE_REF_fixed(tp, ref)        tp##_##ref##_t
#define AVRO_TYPE_REF_map(tp, ref)          tp##_map_##ref##_t
#define AVRO_TYPE_REF_record(tp, ref)       tp##_##ref##_t
#define AVRO_TYPE_REF_recursive(tp, ref)    tp##_##ref##_t *
#define AVRO_TYPE_REF_union(tp, ref)        tp##_##ref##_t


#define AVRO_TYPE_NAME(type, ref)  AVRO_TYPE_NAME_##type(ref)

#define AVRO_TYPE_NAME_boolean(ref)         boolean
#define AVRO_TYPE_NAME_bytes(ref)           bytes
#define AVRO_TYPE_NAME_float(ref)           float
#define AVRO_TYPE_NAME_double(ref)          double
#define AVRO_TYPE_NAME_int(ref)             int
#define AVRO_TYPE_NAME_long(ref)            long
#define AVRO_TYPE_NAME_null(ref)            null
#define AVRO_TYPE_NAME_string(ref)          string

#define AVRO_TYPE_NAME_array(ref)           array##_##ref
#define AVRO_TYPE_NAME_enum(ref)            ref
#define AVRO_TYPE_NAME_fixed(ref)           ref
#define AVRO_TYPE_NAME_map(ref)             map##_##ref
#define AVRO_TYPE_NAME_record(ref)          ref
#define AVRO_TYPE_NAME_recursive(ref)       ref
#define AVRO_TYPE_NAME_union(ref)           ref


#define AVRO_TYPE_FIELD(type, ref)  AVRO_TYPE_FIELD_##type(ref)

#define AVRO_TYPE_FIELD_boolean(ref)        boolean_val
#define AVRO_TYPE_FIELD_bytes(ref)          bytes_val
#define AVRO_TYPE_FIELD_float(ref)          float_val
#define AVRO_TYPE_FIELD_double(ref)         double_val
#define AVRO_TYPE_FIELD_int(ref)            int_val
#define AVRO_TYPE_FIELD_long(ref)           long_val
#define AVRO_TYPE_FIELD_null(ref)           null_val
#define AVRO_TYPE_FIELD_string(ref)         string_val

#define AVRO_TYPE_FIELD_array(ref)          array##_##ref
#define AVRO_TYPE_FIELD_enum(ref)           ref
#define AVRO_TYPE_FIELD_fixed(ref)          ref
#define AVRO_TYPE_FIELD_map(ref)            map##_##ref
#define AVRO_TYPE_FIELD_record(ref)         ref
#define AVRO_TYPE_FIELD_recursive(ref)      ref
#define AVRO_TYPE_FIELD_union(ref)          ref


#define AVRO_TYPE_INIT(tp, type, ref, name)  AVRO_TYPE_INIT_##type(tp, ref, name)

#define AVRO_TYPE_INIT_boolean(tp, ref, name)  obj->name = 0
#define AVRO_TYPE_INIT_bytes(tp, ref, name)    avro_raw_string_init(&obj->name)
#define AVRO_TYPE_INIT_float(tp, ref, name)    obj->name = 0
#define AVRO_TYPE_INIT_double(tp, ref, name)   obj->name = 0
#define AVRO_TYPE_INIT_int(tp, ref, name)      obj->name = 0
#define AVRO_TYPE_INIT_long(tp, ref, name)     obj->name = 0
#define AVRO_TYPE_INIT_null(tp, ref, name)     obj->name = 0
#define AVRO_TYPE_INIT_string(tp, ref, name)   avro_raw_string_init(&obj->name)

#define AVRO_TYPE_INIT_array(tp, ref, name)      tp##_array_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_enum(tp, ref, name)       obj->name = 0
#define AVRO_TYPE_INIT_fixed(tp, ref, name) \
	memset(obj->name, 0, sizeof(AVRO_TYPE_REF_fixed(tp, ref)))
#define AVRO_TYPE_INIT_map(tp, ref, name)        tp##_map_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_record(tp, ref, name)     tp##_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_recursive(tp, ref, name)  obj->name = tp##_##ref##_new()
#define AVRO_TYPE_INIT_union(tp, ref, name)      tp##_##ref##_init(&obj->name)


#define AVRO_UNION_SET_PROTOTYPE_(tp, name, bname) \
	void tp##_##name##_set_##bname(tp##_##name##_t *obj)
#define AVRO_UNION_SET_PROTOTYPE(tp, name, bname) \
	AVRO_UNION_SET_PROTOTYPE_(tp, name, bname)


/* Define the macros that can be used in SCHEMA_DEFINITION */

#define AVRO_UNION_BRANCH(tp, name, index, btype, bref, first, last) \
	AVRO_UNION_SET_PROTOTYPE(tp, name, AVRO_TYPE_NAME(btype, bref)) \
	{ \
		if (obj->discriminant != index) { \
			tp##_##name##_clear(obj); \
			AVRO_TYPE_INIT(tp, btype, bref, \
				       branch.AVRO_TYPE_FIELD(btype, bref)); \
			obj->discriminant = index; \
		} \
	}

#define AVRO_FORWARD(tp, type, name)                                  /* nothing */
#define AVRO_ARRAY(tp, name, itype, iref)                             /* nothing */
#define AVRO_MAP(tp, name, itype, iref)                               /* nothing */
#define AVRO_RECORD_START(tp, name)                                   /* nothing */
#define AVRO_ENUM_START(tp, name)                                     /* nothing */
#define AVRO_ENUM_SYMBOL(TP, NAME, symbol, value, first, last)        /* nothing */
#define AVRO_ENUM_END(tp, name)                                       /* nothing */
#define AVRO_FIXED(tp, name, size)                                    /* nothing */
#define AVRO_RECORD_FIELD(tp, name, field, ftype, fref, first, last)  /* nothing */
#define AVRO_RECORD_END(tp, name)                                     /* nothing */
#define AVRO_UNION_START(tp, name)                                    /* nothing */
#define AVRO_UNION_END(tp, name)                                      /* nothing */


/* Call SCHEMA_DEFINITION to generate the code */

SCHEMA_DEFINITION()



#include <avro.h>
#include <avro/consumer.h>
#include <avro/specific.h>

/*
 * This file creates prototypes for the functions that consume instances
 * of a schema-specific data type.
 */

/* Define some helper macros */

#define AVRO_CONSUME(basename) \
	int basename##_consume(const basename##_t *obj, \
			       avro_consumer_t *consumer, \
			       void *user_data);

/* Define the macros that can be used in SCHEMA_DEFINITION */

#define AVRO_ARRAY(tp, name, itype, iref)   AVRO_CONSUME(tp##_array_##name)
#define AVRO_ENUM_START(tp, name)           AVRO_CONSUME(tp##_##name)
#define AVRO_FIXED(tp, name, size)          AVRO_CONSUME(tp##_##name)
#define AVRO_MAP(tp, name, itype, iref)     AVRO_CONSUME(tp##_map_##name)
#define AVRO_RECORD_START(tp, name)         AVRO_CONSUME(tp##_##name)
#define AVRO_UNION_START(tp, name)          AVRO_CONSUME(tp##_##name)

#define AVRO_FORWARD(tp, type, name)                                  /* nothing */
#define AVRO_ENUM_SYMBOL(TP, NAME, symbol, value, first, last)        /* nothing */
#define AVRO_ENUM_END(tp, name)                                       /* nothing */
#define AVRO_RECORD_FIELD(tp, name, i, field, ftype, fref, first, last)  /* nothing */
#define AVRO_RECORD_END(tp, name)                                     /* nothing */
#define AVRO_UNION_BRANCH(tp, name, index, btype, bref, first, last)  /* nothing */
#define AVRO_UNION_END(tp, name)                                      /* nothing */


/* Call SCHEMA_DEFINITION to generate the code */

SCHEMA_DEFINITION()


/* Undefine everything when we're done */

#undef AVRO_CONSUME

#undef AVRO_FORWARD
#undef AVRO_ARRAY
#undef AVRO_ENUM_START
#undef AVRO_ENUM_SYMBOL
#undef AVRO_ENUM_END
#undef AVRO_FIXED
#undef AVRO_MAP
#undef AVRO_RECORD_START
#undef AVRO_RECORD_FIELD
#undef AVRO_RECORD_END
#undef AVRO_UNION_START
#undef AVRO_UNION_BRANCH
#undef AVRO_UNION_END

#include <stdint.h>
#include <string.h>

#include <avro/allocation.h>
#include <avro/data.h>

/*
 * This file implements the _init and _new functions.
 */


/* Define some helper macros */

#define AVRO_TYPE_REF(tp, type, ref)  AVRO_TYPE_REF_##type(tp, ref)

#define AVRO_TYPE_REF_boolean(tp, ref)      int
#define AVRO_TYPE_REF_bytes(tp, ref)        avro_raw_string_t
#define AVRO_TYPE_REF_float(tp, ref)        float
#define AVRO_TYPE_REF_double(tp, ref)       double
#define AVRO_TYPE_REF_int(tp, ref)          int32_t
#define AVRO_TYPE_REF_long(tp, ref)         int64_t
#define AVRO_TYPE_REF_null(tp, ref)         int
#define AVRO_TYPE_REF_string(tp, ref)       avro_raw_string_t

#define AVRO_TYPE_REF_array(tp, ref)        tp##_array_##ref##_t
#define AVRO_TYPE_REF_enum(tp, ref)         tp##_##ref##_t
#define AVRO_TYPE_REF_fixed(tp, ref)        tp##_##ref##_t
#define AVRO_TYPE_REF_map(tp, ref)          tp##_map_##ref##_t
#define AVRO_TYPE_REF_record(tp, ref)       tp##_##ref##_t
#define AVRO_TYPE_REF_recursive(tp, ref)    tp##_##ref##_t *
#define AVRO_TYPE_REF_union(tp, ref)        tp##_##ref##_t


#define AVRO_TYPE_INIT(tp, type, ref, name)  AVRO_TYPE_INIT_##type(tp, ref, name)

#define AVRO_TYPE_INIT_boolean(tp, ref, name)  obj->name = 0
#define AVRO_TYPE_INIT_bytes(tp, ref, name)    avro_raw_string_init(&obj->name)
#define AVRO_TYPE_INIT_float(tp, ref, name)    obj->name = 0
#define AVRO_TYPE_INIT_double(tp, ref, name)   obj->name = 0
#define AVRO_TYPE_INIT_int(tp, ref, name)      obj->name = 0
#define AVRO_TYPE_INIT_long(tp, ref, name)     obj->name = 0
#define AVRO_TYPE_INIT_null(tp, ref, name)     obj->name = 0
#define AVRO_TYPE_INIT_string(tp, ref, name)   avro_raw_string_init(&obj->name)

#define AVRO_TYPE_INIT_array(tp, ref, name)      tp##_array_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_enum(tp, ref, name)       obj->name = 0
#define AVRO_TYPE_INIT_fixed(tp, ref, name) \
	memset(obj->name, 0, sizeof(AVRO_TYPE_REF_fixed(tp, ref)))
#define AVRO_TYPE_INIT_map(tp, ref, name)        tp##_map_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_record(tp, ref, name)     tp##_##ref##_init(&obj->name)
#define AVRO_TYPE_INIT_recursive(tp, ref, name)  obj->name = NULL
#define AVRO_TYPE_INIT_union(tp, ref, name)      tp##_##ref##_init(&obj->name)


/* Define the macros that can be used in SCHEMA_DEFINITION */

#define AVRO_ARRAY(tp, name, itype, iref) \
	void tp##_array_##name##_init(tp##_array_##name##_t *obj) \
	{ \
		avro_raw_array_init(&obj->array, \
		    sizeof(AVRO_TYPE_REF(tp, itype, iref))); \
	} \
	\
	tp##_array_##name##_t *tp##_array_##name##_new(void) \
	{ \
		tp##_array_##name##_t *obj = \
		    avro_new(AVRO_TYPE_REF_array(tp, name)); \
		if (obj) { tp##_array_##name##_init(obj); } \
		return obj; \
	}


#define AVRO_MAP(tp, name, itype, iref) \
	void tp##_map_##name##_init(tp##_map_##name##_t *obj) \
	{ \
		avro_raw_map_init(&obj->map, \
		    sizeof(AVRO_TYPE_REF(tp, itype, iref))); \
	} \
	\
	tp##_map_##name##_t *tp##_map_##name##_new(void) \
	{ \
		tp##_map_##name##_t *obj = \
		    avro_new(AVRO_TYPE_REF_map(tp, name)); \
		if (obj) { tp##_map_##name##_init(obj); } \
		return obj; \
	}


#define AVRO_RECORD_START(tp, name) \
	void tp##_##name##_init(tp##_##name##_t *obj) \
	{

#define AVRO_RECORD_FIELD(tp, name, field, ftype, fref, first, last) \
		AVRO_TYPE_INIT(tp, ftype, fref, field);

#define AVRO_RECORD_END(tp, name) \
	} \
	\
	tp##_##name##_t *tp##_##name##_new(void) \
	{ \
		tp##_##name##_t *obj = \
		    avro_new(AVRO_TYPE_REF_record(tp, name)); \
		if (obj) { tp##_##name##_init(obj); } \
		return obj; \
	}


#define AVRO_UNION_START(tp, name) \
	void tp##_##name##_init(tp##_##name##_t *obj) \
	{ \
		memset(obj, 0, sizeof(AVRO_TYPE_REF_union(tp, name))); \
		obj->discriminant = -1; \
	} \
	\
	tp##_##name##_t *tp##_##name##_new(void) \
	{ \
		tp##_##name##_t *obj = \
		    avro_malloc(sizeof(AVRO_TYPE_REF_union(tp, name))); \
		if (obj) { tp##_##name##_init(obj); } \
		return obj; \
	}


#define AVRO_FORWARD(tp, type, name)                                  /* nothing */
#define AVRO_ENUM_START(tp, name)                                     /* nothing */
#define AVRO_ENUM_SYMBOL(TP, NAME, symbol, value, first, last)        /* nothing */
#define AVRO_ENUM_END(tp, name)                                       /* nothing */
#define AVRO_FIXED(tp, name, size)                                    /* nothing */
#define AVRO_UNION_BRANCH(tp, name, index, btype, bref, first, last)  /* nothing */
#define AVRO_UNION_END(tp, name)                                      /* nothing */


/* Call SCHEMA_DEFINITION to generate the code */

SCHEMA_DEFINITION()


/* Undefine everything when we're done */

#undef AVRO_TYPE_REF
#undef AVRO_TYPE_REF_boolean
#undef AVRO_TYPE_REF_bytes
#undef AVRO_TYPE_REF_float
#undef AVRO_TYPE_REF_double
#undef AVRO_TYPE_REF_int
#undef AVRO_TYPE_REF_long
#undef AVRO_TYPE_REF_null
#undef AVRO_TYPE_REF_string
#undef AVRO_TYPE_REF_array
#undef AVRO_TYPE_REF_enum
#undef AVRO_TYPE_REF_fixed
#undef AVRO_TYPE_REF_map
#undef AVRO_TYPE_REF_record
#undef AVRO_TYPE_REF_recursive
#undef AVRO_TYPE_REF_union

#undef AVRO_TYPE_INIT
#undef AVRO_TYPE_INIT_boolean
#undef AVRO_TYPE_INIT_bytes
#undef AVRO_TYPE_INIT_float
#undef AVRO_TYPE_INIT_double
#undef AVRO_TYPE_INIT_int
#undef AVRO_TYPE_INIT_long
#undef AVRO_TYPE_INIT_null
#undef AVRO_TYPE_INIT_string
#undef AVRO_TYPE_INIT_array
#undef AVRO_TYPE_INIT_enum
#undef AVRO_TYPE_INIT_fixed
#undef AVRO_TYPE_INIT_map
#undef AVRO_TYPE_INIT_record
#undef AVRO_TYPE_INIT_recursive
#undef AVRO_TYPE_INIT_union

#undef AVRO_FORWARD
#undef AVRO_ARRAY
#undef AVRO_ENUM_START
#undef AVRO_ENUM_SYMBOL
#undef AVRO_ENUM_END
#undef AVRO_FIXED
#undef AVRO_MAP
#undef AVRO_RECORD_START
#undef AVRO_RECORD_FIELD
#undef AVRO_RECORD_END
#undef AVRO_UNION_START
#undef AVRO_UNION_BRANCH
#undef AVRO_UNION_END
